<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.project.parth.closestone.SetPreferences">

    <TextView
        android:id="@+id/favorites_title"
        android:text="@string/favorites_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/preference_msg"
        android:layout_below="@+id/favorites_title"
        android:text="@string/preference_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"/>

    <com.project.parth.closestone.DynamicListView
        android:layout_below="@+id/preference_msg"
        android:layout_marginTop="10dp"
        android:id="@+id/listview"
        android:background="#0000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_marginTop="40dp"
        android:layout_below="@+id/listview"
        android:id="@+id/add_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/plus_icon"
        android:layout_centerHorizontal="true"/>
    <EditText
        android:id="@+id/new_item"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/add_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/add"
        android:layout_below="@+id/new_item"
        android:text="Click to add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
